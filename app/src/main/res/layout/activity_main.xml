<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:padding="16dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/tv_due"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorPrimary"/>

        <SeekBar
            android:id="@+id/seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_pass" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_baslat"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Başlat"
            android:textColor="@color/colorPrimary"/>

        <Button
            android:id="@+id/btn_duraklat"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Duraklat"
            android:textColor="@color/colorPrimary"/>

        <Button
            android:id="@+id/btn_durdur"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Çıkış"
            android:textColor="@color/colorPrimary"/>
    </LinearLayout>



            <me.biubiubiu.justifytext.library.JustifyTextView
                android:id="@+id/hergun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/colorPrimary"/>

            <me.biubiubiu.justifytext.library.JustifyTextView
                android:id="@+id/hergun1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Efendimin sohbetlerinden:\nHer gün bir kötü huyundan vazgeçsen...\n"
                android:textColor="@color/colorPrimary" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_pass1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/tv_duration1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/tv_due1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colorPrimary" />

                <SeekBar
                    android:id="@+id/seek_bar1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_pass1" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_baslat1"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Başlat"
                    android:textColor="@color/colorPrimary" />

                <Button
                    android:id="@+id/btn_duraklat1"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Duraklat"
                    android:textColor="@color/colorPrimary" />

            </LinearLayout>

            <CheckBox
                android:id="@+id/yapildi1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="false"
                android:text="Her gün bir kötü huyundan vazgeçsen, her gün bir zaafını, bir erdemle değiştirsen"
                android:textColor="@color/colorPrimary" />
            <CheckBox
                android:id="@+id/yapildi2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="false"
                android:text="Her yeni gün başka bir yetimin başını okşasan"
                android:textColor="@color/colorPrimary" />
            <CheckBox
                android:id="@+id/yapildi3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="false"
                android:text="Bir zalime meydan okusan"
                android:textColor="@color/colorPrimary" />
            <CheckBox
                android:id="@+id/yapildi4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="false"
                android:text="Kendin sürekli fakirleşirken, her geçen gün daha da cömertleşsen"
                android:textColor="@color/colorPrimary" />
            <CheckBox
                android:id="@+id/yapildi5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="false"
                android:text="Her gün insanların yolları üzerinden bir taşı kaldırsan"
                android:textColor="@color/colorPrimary" />
            <CheckBox
                android:id="@+id/yapildi6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="false"
                android:text="Veyahut bir yeteneğe kendini gerçekleştirmesi için yardım etsen"
                android:textColor="@color/colorPrimary" />
            <CheckBox
                android:id="@+id/yapildi7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="false"
                android:text="Her gün büyüklerin sözlerinden küçüklere bir şeyler öğretsen"
                android:textColor="@color/colorPrimary" />
            <CheckBox
                android:id="@+id/yapildi8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="false"
                android:text="Her yeni gün büyük bir adamın bir sözüne hayat versen"
                android:textColor="@color/colorPrimary" />
            <CheckBox
                android:id="@+id/yapildi9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="false"
                android:text="Ah her sabah kendine bir iyilikler listesi hazırlasan ve her akşam kendini acımasızca sorguya çeksen"
                android:textColor="@color/colorPrimary" />
            <CheckBox
                android:id="@+id/yapildi10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="false"
                android:text="O kadar çok sorgulasan ve eleştirsen ki kendini başka hiç kimseye ve hiçbir şeye zaman kalmasa"
                android:textColor="@color/colorPrimary" />
            <CheckBox
                android:id="@+id/yapildi11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="false"
                android:text="Öyle meşgul olsan ki nefsini ezmekle, her çekiç darbesiyle ruhuna kıvılcımlar sıçrasa ve tenin nurunu gizleyemeyecek kadar incelse bile farkında olmasan"
                android:textColor="@color/colorPrimary" />
            <CheckBox
                android:id="@+id/yapildi12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="false"
                android:text="Gözlerin kızarmış okumaktan, alnın kırışmış düşünmekten, bacakların yorulmuş hakikatin yollarında yürümekten"
                android:textColor="@color/colorPrimary" />
            <CheckBox
                android:id="@+id/yapildi13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="false"
                android:text="Ellerinde çekiçlerden nasırlar, sırtında kamburlar insanlığın acılarından"
                android:textColor="@color/colorPrimary" />
            <CheckBox
                android:id="@+id/yapildi14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="false"
                android:text="Taliplerin birer birer ümidi kesip uzaklaşırken, yolunu gözleyen çaresizler her geçen gün artmış"
                android:textColor="@color/colorPrimary" />
            <CheckBox
                android:id="@+id/yapildi15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="false"
                android:text="Ölümün soluğu ensende gezerken, yüz yıl sonra için planların hazırlanmış ve Azrail kabzetmeye geldiğinde canını hala yapılacak işlerin kalmış ve aksakallı başın önüne düşse ama ağır çekicin düşmese elinden"
                android:textColor="@color/colorPrimary" />
            <CheckBox
                android:id="@+id/yapildi16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="false"
                android:text="İsterse cenazende kimse olmasın, cesedin kimsesizler mezarlığında, isimsiz bir çukura indirilsin, sen ki ölümü yenmiş ve dirisin."
                android:textColor="@color/colorPrimary" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>